%h1 Welcome to Crate
.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3 Create your own crate
      .panel-body
        %a.btn.btn-primary{href: new_user_registration_path} Sign up
    %h2 or
    .panel.panel-default
      .panel-heading
        %h3 Login into your crate
      .panel-body
        = simple_form_for('user', url: user_session_path) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true
            = f.input :password, required: false
          .form-actions
            = f.button :submit, "Sign in", class: [:btn, :'btn-primary']
