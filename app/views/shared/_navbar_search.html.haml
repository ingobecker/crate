%form.navbar-form.navbar-right{role: 'search'}
  .form-group
    = text_field_tag 'nav-search', '', data: {url: search_albums_path, url_show: albums_path}
  - if user_signed_in?
    %button.btn.btn-default.btn-sm.dropdown-toggle{data: {toggle: :dropdown}}
      %span.glyphicon.glyphicon-cog
      %span.caret
    %ul.dropdown-menu{role: :menu}
      %li.dropdown-header Search options
      %li
        .checkbox.search-check
          %label
            %input{type: 'checkbox'}
            Search my crate only
